{
  "setupFilesAfterEnv": [
    "jest-extended"
  ],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/))\\.(ts)$",
  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "node"
  ],
  "coverageReporters": [
    "json",
    "lcov",
    "text",
    "text-summary"
  ],
  "coverageDirectory": "./coverage/",
  "collectCoverage": true,
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  }
}
